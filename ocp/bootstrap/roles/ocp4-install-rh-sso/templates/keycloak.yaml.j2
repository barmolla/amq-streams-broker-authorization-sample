apiVersion: keycloak.org/v1alpha1
kind: Keycloak
metadata:
  name: keycloak
  labels:
    app: sso
  namespace: keycloak
spec:
  externalDatabase:
    enabled: true
  externalAccess:
    enabled: true
  keycloakDeploymentSpec:
    experimental:
      env:
        - name: JAVA_OPTS_APPEND
          value: '-Dkeycloak.profile.feature.upload_scripts=enabled'
        - name: SSO_ADMIN_USERNAME
          value: admin
        - name: SSO_ADMIN_PASSWORD
          value: admin
  instances: 1
